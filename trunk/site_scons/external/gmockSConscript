Import ('env')

env.Replace(CXXFLAGS=[], CFLAGS=[])
name = 'gmock'
inc = env.Dir('#/gmock/gtest'), env.Dir('#/gmock/gtest/include'), env.Dir('#/gmock'), env.Dir('#/gmock/include')
ext_inc = None
src = ['gtest/src/gtest-all.cc','src/gmock-all.cc']
deps = ['pthread']

env.CreateStaticLibrary(name, inc, ext_inc, src, deps)

name = 'gtest_main'
inc = env.Dir('#/gmock/gtest'), env.Dir('#/gmock/gtest/include'), env.Dir('#/gmock'), env.Dir('#/gmock/include')
ext_inc = None
src = ['gtest/src/gtest_main.cc']
deps = []

env.CreateStaticLibrary(name, inc, ext_inc, src, deps)

