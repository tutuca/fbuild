    <component name="component_name"
        <installer
            distro=["UBUNTU" | "ARCH"]
            target=["package_name" | "url"]
            manager=["HG" | "SVN" | "WGET" | "APT-GET" | 
                     "APTITUDE" | "PACKER" | "PACMAN"] />
