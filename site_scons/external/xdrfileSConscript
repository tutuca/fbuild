Import ('env')

target = 'libxdrfile.a'
configurePath = env.File( env['WS_DIR'] + '/xdrfile/configure')
ext_inc = env.Glob('./include/*.h')

env.CreateAutoToolsProject('xdrfile-make', target, configurePath, ['xdrfile'])
env.CreateHeaderOnlyLibrary('xdrfile-headers', ext_inc, ['xdrfile-make'], ['xdrfile'])
env.CreateDoc('xdrfile-doc')
