Import ('env')

gtestEnv = env.Clone()
gtestEnv.Replace(CXXFLAGS=[], CFLAGS=[])
name = 'gtest'
inc = gtestEnv.Dir('.'), gtestEnv.Dir('include'), gtestEnv.Dir('include/gtest')
ext_inc = gtestEnv.Dir('include/gtest')
src = ['src/gtest-all.cc']
deps = []

gtestEnv.CreateStaticLibrary(name, inc, ext_inc, src, deps)
gtestEnv.CreateDoc(name)
