Import ('env')

gmockEnv = env.Clone()
gmockEnv.Replace(CXXFLAGS=[], CFLAGS=[])
name = 'gmock'
inc = gmockEnv.Dir('gtest'), gmockEnv.Dir('gtest/include'), gmockEnv.Dir('.'), gmockEnv.Dir('include')
ext_inc = gmockEnv.Dir('include/gmock')
src = ['gtest/src/gtest-all.cc','src/gmock-all.cc']
deps = ['pthread']

gmockEnv.CreateStaticLibrary(name, inc, ext_inc, src, deps)
gmockEnv.CreateDoc(name)

name = 'gtest_main'
inc = gmockEnv.Dir('gtest'), gmockEnv.Dir('gtest/include'), gmockEnv.Dir('.'), gmockEnv.Dir('include')
ext_inc = None
src = ['gtest/src/gtest_main.cc']
deps = []

gmockEnv.CreateStaticLibrary(name, inc, ext_inc, src, deps)
