Import ('env')

env.Replace(CXXFLAGS=[], CFLAGS=[])
name = 'gmock'
inc = env.Dir('gtest'), env.Dir('gtest/include'), env.Dir('.'), env.Dir('include')
ext_inc = env.Dir('include/gmock')
src = ['gtest/src/gtest-all.cc','src/gmock-all.cc']
deps = ['pthread']

env.CreateStaticLibrary(name, inc, ext_inc, src, deps)
env.CreateDoc(name)

name = 'gtest_main'
inc = env.Dir('gtest'), env.Dir('gtest/include'), env.Dir('.'), env.Dir('include')
ext_inc = None
src = ['gtest/src/gtest_main.cc']
deps = []

env.CreateStaticLibrary(name, inc, ext_inc, src, deps)

